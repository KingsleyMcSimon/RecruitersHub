<div class="column is-half">
<%= render 'user_info' %>

<% @recruits.each do | recruit | %>

    <div class="box">
    <article class="media">
    
    <div class="media-content">
    
    <% if user_signed_in? && current_user.id == recruit.user_id %>
    <nav class="level">
    <div class="level-left is-mobile">
    <%= link_to recruit, class: "level-item" do %>
        <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
        <% end %>
        <%= link_to edit_recruit_path(recruit), class: "level-item" do %>
            <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
            <% end %>
                <%= link_to recruit, method: :delete, data: { confirm: "Are you sure you want to delete this recruit?" } do %>
                    <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                    <% end %>
  				</div>
  			</nav>
        <% end %>
  		</div>
  	</article>
  </div>
<% end %>
</div>