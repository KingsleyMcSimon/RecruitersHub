<div class="column is-half">
<% if user_signed_in? %>
<article class="media box">
<figure class="media-left">
<p class="image is-64x64">
<%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
</p>
</figure>
<div class="media-content">

<%= render 'recruits/form' %>

</div>
</article>
<% end %>

<% @recruits.each do | recruit | %>

    <div class="box">
    <article class="media">
    <div class="media-left">
    <figure class="image is-64x64">
    <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
    </figure>
    </div>
    <div class="media-content">
    <div class="content">
    <strong><%= recruit.user.name %></strong> <br />
    <small><%= recruit.user.username %></small><br />
    <p><%= recruit.recruit %></p>
    </div>
    <% if user_signed_in? %>
    <nav class="level">
    <div class="level-left is-mobile">
    <%= link_to capt, class: "level-item" do %>
        <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
        <% end %>
        <%= link_to edit_recruit_path(recruit), class: "level-item" do %>
            <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
            <% end %>
                <%= link_to recruit, method: :delete, data: { confirm: "Are you sure you want to delete this conversation?" } do %>
                    <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                    <% end %>
  				</div>
  			</nav>
        <% end %>
  		</div>
  	</article>
  </div>
<% end %>
</div>
